# Telegram
BOT_TOKEN=123456:abcdef...
# Если не указан WEBHOOK_DOMAIN — включится polling
WEBHOOK_DOMAIN=
WEBHOOK_PATH=/tg/webhook
# DEV: авто-апрув анкет исполнительниц (для быстрого теста)
AUTO_APPROVE_PERFORMERS=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gd_bot?schema=public

# Redis (optional but recommended)
REDIS_URL=redis://localhost:6379

# S3-compatible storage (optional for MVP)
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=
ADMIN_IDS=123456789

# Billing & Admin
AUTO_APPROVE_BILLING=false

# Billing prices (RUB)
BOOST_7D_RUB=500
BOOST_14D_RUB=900
PLAN_STD_30D_RUB=900
PLAN_STD_90D_RUB=2400
PLAN_PRO_30D_RUB=1500
PLAN_PRO_90D_RUB=4000
BILLING_INSTRUCTIONS=Перевод на карту: XXXX XXXX; укажите @username; затем загрузите скрин в бота.

# Trial period for performers
TRIAL_DAYS=60

